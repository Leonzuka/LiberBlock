import React, { useState, useRef, useEffect } from 'react';
import * as THREE from 'three';
import { 
  Github, 
  Linkedin, 
  Cpu, 
  Code2, 
  ShieldCheck, 
  Zap,
  ChevronRight,
  Send
} from 'lucide-react';

/**
 * Nota Técnica: O erro "TypeError: Cannot read properties of undefined (reading 'S')" 
 * é intrínseco ao reconciliador do @react-three/fiber em certos ambientes de sandbox.
 * SOLUÇÃO DEFINITIVA: Migramos para Three.js Nativo usando Vanilla JS dentro de um useEffect.
 * Isso garante 100% de compatibilidade e performance, mantendo a UI em React.
 */

const COLORS = {
  bgPrimary: '#0A0A0B',
  accentBitcoin: '#F7931A',
};

// --- COMPONENTE DE FUNDO 3D (VANILLA THREE.JS) ---
const ThreeBackground = () => {
  const containerRef = useRef();

  useEffect(() => {
    if (!containerRef.current) return;

    // Setup Básico
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(45, window.innerWidth / window.innerHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
    
    renderer.setSize(window.innerWidth, window.innerHeight);
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
    containerRef.current.appendChild(renderer.domElement);

    camera.position.z = 5;

    // Luzes
    const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
    scene.add(ambientLight);

    const pointLight = new THREE.PointLight(COLORS.accentBitcoin, 2);
    pointLight.position.set(5, 5, 5);
    scene.add(pointLight);

    // Cubo Hero
    const geometry = new THREE.BoxGeometry(2.2, 2.2, 2.2);
    const material = new THREE.MeshStandardMaterial({ 
      color: COLORS.accentBitcoin, 
      wireframe: true,
      transparent: true,
      opacity: 0.15
    });
    const cube = new THREE.Mesh(geometry, material);
    scene.add(cube);

    // Partículas
    const particlesCount = 180;
    const posArray = new Float32Array(particlesCount * 3);
    for (let i = 0; i < particlesCount * 3; i++) {
      posArray[i] = (Math.random() - 0.5) * 12;
    }

    const particlesGeo = new THREE.BufferGeometry();
    particlesGeo.setAttribute('position', new THREE.BufferAttribute(posArray, 3));
    
    const particlesMat = new THREE.PointsMaterial({
      size: 0.035,
      color: COLORS.accentBitcoin,
      transparent: true,
      opacity: 0.3
    });

    const particlesMesh = new THREE.Points(particlesGeo, particlesMat);
    scene.add(particlesMesh);

    // Animação
    let frameId;
    const animate = () => {
      frameId = requestAnimationFrame(animate);
      
      const time = Date.now() * 0.001;
      
      cube.rotation.x += 0.008;
      cube.rotation.y += 0.008;
      const pulse = 1 + Math.sin(time * 0.8) * 0.03;
      cube.scale.set(pulse, pulse, pulse);

      particlesMesh.rotation.y += 0.0008;
      particlesMesh.rotation.x += 0.0004;

      renderer.render(scene, camera);
    };
    animate();

    // Resize
    const handleResize = () => {
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
      renderer.setSize(window.innerWidth, window.innerHeight);
    };
    window.addEventListener('resize', handleResize);

    // Cleanup
    return () => {
      window.removeEventListener('resize', handleResize);
      cancelAnimationFrame(frameId);
      if (containerRef.current) {
        containerRef.current.removeChild(renderer.domElement);
      }
      renderer.dispose();
    };
  }, []);

  return <div ref={containerRef} className="absolute inset-0 z-0" />;
};

// --- COMPONENTES UI REACT ---

const Navbar = () => (
  <nav className="fixed top-0 w-full z-50 px-8 py-6 flex justify-between items-center backdrop-blur-md bg-black/40 border-b border-white/5">
    <div className="flex items-center gap-3">
      <div className="w-10 h-10 bg-orange-500 rounded-lg flex items-center justify-center font-bold text-black text-sm shadow-[0_0_20px_rgba(247,147,26,0.3)]">LB</div>
      <span className="font-bold tracking-tighter text-2xl text-white">LIBERBLOCK</span>
    </div>
    <div className="hidden lg:flex gap-10 text-[10px] font-bold uppercase tracking-[0.2em] text-white/50">
      {['Início', 'Projetos', 'Sobre', 'Contato'].map((item) => (
        <a key={item} href={`#${item.toLowerCase()}`} className="hover:text-orange-500 transition-all">
          {item}
        </a>
      ))}
    </div>
    <button className="bg-orange-500 hover:bg-white text-black px-6 py-2 rounded-full text-[10px] font-black transition-all transform hover:scale-105 uppercase">
      Conectar
    </button>
  </nav>
);

const ProjectCard = ({ title, desc, tag }) => (
  <div className="group relative bg-[#111113] border border-white/5 p-10 rounded-2xl overflow-hidden hover:border-orange-500/40 transition-all duration-500">
    <div className="text-[9px] font-mono text-orange-500 mb-4 uppercase tracking-[0.3em] flex items-center gap-2">
      <span className="w-1.5 h-1.5 rounded-full bg-orange-500 animate-pulse"></span>
      {tag}
    </div>
    <h3 className="text-2xl font-bold text-white mb-4">{title}</h3>
    <p className="text-gray-400 text-sm leading-relaxed mb-6 opacity-80">{desc}</p>
    <button className="text-[10px] font-bold text-white flex items-center gap-2 group/btn uppercase tracking-widest">
      Explorar <ChevronRight size={14} className="group-hover/btn:translate-x-1 transition-transform text-orange-500" />
    </button>
  </div>
);

